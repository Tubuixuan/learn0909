{
  "compilerOptions": {
    "target": "ES6", // Phiên bản ECMAScript mục tiêu
    "module": "commonjs", // Module system sử dụng CommonJS
    "rootDir": "./src", // Thư mục chứa mã nguồn TypeScript
    "outDir": "./dist", // Thư mục chứa mã nguồn sau khi biên dịch
    "strict": true, // Bật chế độ kiểm tra chặt chẽ
    "esModuleInterop": true, // Cho phép import các module ES6
    "skipLibCheck": true, // Bỏ qua kiểm tra type của các file .d.ts
    "forceConsistentCasingInFileNames": true // Buộc phân biệt tên file
  },
  "include": ["src"], // Các tệp/thư mục cần biên dịch
  "exclude": ["node_modules"] // Loại trừ thư mục node_modules
}
